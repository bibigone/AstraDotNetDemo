<Window x:Class="AstraTestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Astra WPF Test App"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <StackPanel Margin="10" Orientation="Vertical">
        <CheckBox Margin="3" Padding="3" x:Name="checkBoxWithDepth" VerticalContentAlignment="Center">With depth?</CheckBox>
        <CheckBox Margin="3" Padding="3" x:Name="checkBoxWithColor" VerticalContentAlignment="Center">With color?</CheckBox>
        <CheckBox Margin="3" Padding="3" x:Name="checkBoxWithInfrared" VerticalContentAlignment="Center">With infrared?</CheckBox>
        <CheckBox Margin="3" Padding="3" x:Name="checkBoxWithBodyTracking" VerticalContentAlignment="Center">With bodyTracking?</CheckBox>
        <Button Margin="3" Padding="3" Content="Open Sensor #0" Click="OpenSensor0"/>
        <Button Margin="3" Padding="3" Content="Open Sensor #1" Click="OpenSensor1"/>
    </StackPanel>
</Window>
